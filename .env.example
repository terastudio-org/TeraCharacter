# TeraCharacter Environment Configuration
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL="file:./database.sqlite"
DATABASE_AUTH_TOKEN=""

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# GitHub OAuth (for authentication)
GITHUB_ID="your_github_client_id"
GITHUB_SECRET="your_github_client_secret"

# ================================
# AI PROVIDER CONFIGURATION
# ================================

# OpenAI (Primary Provider - Censored)
OPENAI_API_KEY="your_openai_api_key_here"

# OpenRouter (Alternative Provider)
OPENROUTER_API_KEY="your_openrouter_api_key"
HELICONE_API_KEY="your_helicone_api_key"

# Hugging Face Inference API (Unfiltered/Open Source)
HF_API_KEY="your_huggingface_api_token"
HF_DATASET_ID="terastudio-org/TeraCharacter-data"

# Groq (Ultra-fast Inference - Unfiltered)
GROQ_API_KEY="your_groq_api_key"

# Local/Ollama (Self-hosted)
OLLAMA_BASE_URL="http://localhost:11434"

# ================================
# APPLICATION SETTINGS
# ================================
NEXT_PUBLIC_APP_NAME="TeraCharacter"
NEXT_PUBLIC_APP_DESCRIPTION="Create and chat with AI characters"
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED=1

# ================================
# HUGGING FACE SPACE CONFIGURATION
# ================================
# These are automatically set when deployed to HF Spaces
# NEXT_PUBLIC_HF_SPACE="true"
# HF_SPACE_ID="your_space_id"
# HF_API_URL="https://your-space-id.hf.space"

# ================================
# OPTIONAL: CUSTOM BASE URLS
# ================================
# If you need to use custom endpoints:
# OPENAI_BASE_URL="https://api.openai.com/v1"
# GROQ_BASE_URL="https://api.groq.com/openai/v1"
# HF_BASE_URL="https://api-inference.huggingface.co/models"